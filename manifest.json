{
  "manifest_version": 3,
  "name": "Ad/Trap Guard",
  "version": "1.0.1",
  "permissions": [
    "storage",    
    "activeTab" 
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "all_frames": true,   
      "run_at": "document_start" 
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dog.gif"],
      "matches": ["<all_urls>"]
    }
  ]
}